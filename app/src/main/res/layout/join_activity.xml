<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout android:id="@+id/SharingList_WholeLL"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#4d5868"
        android:focusableInTouchMode="true"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout"/>

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        >


            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/bgr_mainColor"
                android:layout_marginLeft="30dp"
                />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_join_userinfo"
                android:padding="5dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정정보"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20dp"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginRight="40dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                <EditText
                    android:id="@+id/et_email_join"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="아이디(이메일 주소)"
                    android:background="@drawable/bgr_edittxt_join"
                    android:textSize="12dp"
                    android:textColorHint="#bebcd4"
                    android:paddingLeft="5dp"
                    />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="중복확인"
                    android:textSize="13dp"
                    android:textColor="@color/bgr_mainColor"
                    android:background="@drawable/bgr_joinbtn1"
                    android:id="@+id/btn_emailcheck_join"
                    />

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >


                    <EditText
                        android:id="@+id/et_pw_join"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgr_edittxt_join"
                        android:hint="비밀번호 (6~16자의 영문,숫자, 특수기호 중 택2)"
                        android:paddingLeft="5dp"
                        android:inputType="textPassword"
                        android:textColorHint="#bebcd4"
                        android:textSize="12dp" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >


                    <EditText
                        android:id="@+id/et_pwcheck_join"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="비밀번호 확인"
                        android:background="@drawable/bgr_edittxt_join"
                        android:textSize="12dp"
                        android:inputType="textPassword"
                        android:textColorHint="#bebcd4"
                        android:paddingLeft="5dp"
                        />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_join_admit"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="본인인증"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/et_name_join"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="이름 (실명을 입력해주세요.)"
                        android:background="@drawable/bgr_edittxt_join"
                        android:textSize="12dp"
                        android:textColorHint="#bebcd4"
                        android:paddingLeft="5dp"
                        />

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <EditText
                        android:id="@+id/et_phone_join"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgr_edittxt_join"
                        android:textSize="12dp"
                        android:textColorHint="#bebcd4"
                        android:hint="핸드폰 번호 ('-'구분없이 입력)"
                        android:paddingLeft="5dp"
                        />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:text="중복확인"
                        android:textSize="13dp"
                        android:textColor="@color/bgr_mainColor"
                        android:background="@drawable/bgr_joinbtn1"
                        android:id="@+id/btn_sendsms_join"
                        />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <EditText
                            android:id="@+id/et_admit_join"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="인증번호 입력"
                            android:background="@drawable/bgr_edittxt_join"
                            android:textSize="12dp"
                            android:textColorHint="#bebcd4"
                            android:paddingLeft="5dp"
                            />

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text="인증완료"
                            android:textColor="@color/bgr_mainColor"
                            android:background="@drawable/bgr_joinbtn1"
                            android:layout_alignParentRight="true"
                            android:textSize="13dp"
                            android:id="@+id/btn_chkcertnum_join"
                            />

                    </RelativeLayout>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_join_addinfo"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부가정보"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <EditText
                        android:id="@+id/et_birthdate_join"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:hint="생년월일(190101)"
                        android:background="@drawable/bgr_edittxt_join"
                        android:textSize="14dp"
                        android:textColorHint="#bebcd4"
                        android:paddingLeft="3dp"
                        />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="비공개"
                        android:id="@+id/cb_hide_birth"
                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:id="@+id/ll_malecheck_join"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:id="@+id/img_malecheck_join"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_check1off"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="남성"
                                android:textSize="16dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="#000"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_femalecheck_join"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            >

                            <ImageView
                                android:id="@+id/img_femalecheck_join"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_check1off"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="여성"
                                android:textSize="16dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="#000"
                                />

                        </LinearLayout>


                    </LinearLayout>


                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="비공개"
                        android:id="@+id/cb_hide_gender"
                        />

                </LinearLayout>






            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_join_docu"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이용약관"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="30dp"
                        android:text="서비스 이용약관에 동의합니다."
                        android:textSize="12dp"
                        android:textColor="@color/bgr_mainColor"
                        android:id="@+id/cb_agree_service"
                        />

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/bgr_mainColor"
                        android:background="@drawable/bgr_joinbtn1"
                        android:textSize="13dp"
                        android:text="전체보기"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="30dp"
                        android:text="개인정보 수집이용에 동의합니다."
                        android:textSize="12dp"
                        android:textColor="@color/bgr_mainColor"
                        android:id="@+id/cb_agree_privacy"
                        />

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="전체보기"
                        android:textSize="13dp"
                        android:textColor="@color/bgr_mainColor"
                        android:background="@drawable/bgr_joinbtn1"
                        />

                </LinearLayout>








            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                >

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="60dp"
                   android:text="Talent Planet 시작하기"
                   android:background="@drawable/bgr_joinbtn2"
                   android:paddingLeft="30dp"
                   android:paddingRight="30dp"
                   android:textAllCaps="false"
                   android:textColor="#fff"
                   android:textSize="16dp"
                   android:id="@+id/btn_submit_join"
                   />

            </LinearLayout>

        </LinearLayout>



        </ScrollView>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >



    </LinearLayout>


    </LinearLayout>


