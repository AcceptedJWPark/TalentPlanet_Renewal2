<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#ffffff"
        android:focusableInTouchMode="true"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:fitsSystemWindows="true"
                >
                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/toolbarlayout"/>

            </android.support.v7.widget.Toolbar>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_profile_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgr_mainColor"
                    android:text="User"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    />

                <Button
                    android:id="@+id/btn_mentor_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgr_gray"
                    android:text="Mentor"
                    android:textColor="#b4b4b4"
                    android:textAllCaps="false"
                    android:textSize="13dp"
                    />


                <Button
                    android:id="@+id/btn_mentee_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgr_gray"
                    android:text="Mentee"
                    android:textAllCaps="false"
                    android:textColor="#b4b4b4"
                    android:textSize="13dp"
                    />

                <Button
                    android:id="@+id/btn_point_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/bgr_gray"
                    android:text="Point"
                    android:textAllCaps="false"
                    android:textColor="#b4b4b4"
                    android:textSize="13dp"
                    />

            </LinearLayout>

           <include
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               layout="@layout/inc_profile_user"
               android:visibility="gone"
               />

            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/inc_profile_mentor"
                android:visibility="visible"
                />




        </LinearLayout>

    </LinearLayout>

