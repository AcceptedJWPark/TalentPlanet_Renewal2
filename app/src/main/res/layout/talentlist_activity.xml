<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TalentList.MainActivity_TalentList"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout_talentlist"/>
    </android.support.v7.widget.Toolbar>


            <LinearLayout
                android:id="@+id/ll_addTalent_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/dash_line"
                    android:text="재능 추가 하기"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>


    <RelativeLayout
        android:id="@+id/ll_bar_talentlist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_mentor"
        >

        <TextView
            android:id="@+id/tv_listhaed_talentlist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Student List"
            android:textSize="18dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_arrow_teacher"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:tint="#fff"
            />



    </RelativeLayout>


    <ListView
            android:id="@+id/lv_talentUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </ListView>



</LinearLayout>