<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_mentor_proc_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bgr_mainColor"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Mentor" />


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/cimg_pic_mentor_proc_condition"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pic_sample"
                    app:civ_border_color="#2f3070"
                    app:civ_border_width="4dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/trashView2_mentor"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_gender_mentor_proc_condition"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_male"
                        android:tint="@color/bgr_mainColor" />

                    <TextView
                        android:id="@+id/tv_name_mentor_proc_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="박종우"
                        android:textColor="@color/bgr_subColor"
                        android:textSize="24dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trashView2_mentor">

                    <TextView
                        android:id="@+id/tv_birth_mentor_proc_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="1991.01.23"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_age_mentor_proc_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="28세"
                        android:textSize="13dp"
                        />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                >


                <Button
                    android:id="@+id/btn_cancel_mentor_proc_condition"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/bgr_subbutton2"
                    android:text="신고하기"
                    android:textSize="14dp"
                    android:textColor="@color/bgr_mainColor"
                    android:layout_marginRight="10dp"
                    />

                <Button
                    android:id="@+id/btn_next_mentor_proc_condition"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/bgr_clickedbtn"
                    android:text="완료"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#fff"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bgr_mainColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_mentee_proc_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bgr_mainColor"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Mentee" />


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/cimg_pic_mentee_proc_condition"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:src="@drawable/pic_sample"
                    app:civ_border_color="#2f3070"
                    app:civ_border_width="4dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/trashView2_mentee"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_gender_mentee_proc_condition"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_male"
                        android:tint="@color/bgr_mainColor" />

                    <TextView
                        android:id="@+id/tv_name_mentee_proc_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="민권홍"
                        android:textColor="@color/bgr_subColor"
                        android:textSize="24dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/trashView2_mentor">

                    <TextView
                        android:id="@+id/tv_birth_mentee_proc_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="1990.12.27"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tv_age_mentee_proc_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="28세"
                        android:textSize="13dp" />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/btn_cancel_mentee_proc_condition"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/bgr_subbutton2"
                    android:text="신고하기"
                    android:textSize="14dp"
                    android:textColor="@color/bgr_mainColor"
                    android:layout_marginRight="10dp"
                    />


                <Button
                    android:id="@+id/btn_next_mentee_proc_condition"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:background="@drawable/bgr_clickedbtn"
                    android:text="진행"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:textColor="#fff"
                    />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>




</LinearLayout>