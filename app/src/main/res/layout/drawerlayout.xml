<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingBottom="40dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center|left"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:paddingRight="40dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/cimg_pic_dl"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                app:civ_border_width="2dp"
                app:civ_border_color="#fff"
                android:src="@drawable/pic_profile"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >

            <TextView
                android:id="@+id/tv_user_dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cimg_pic_dl"
                android:text="박종우"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_email_dl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cimg_pic_dl"
                    android:text="pjw910123@naver.com"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />


                <LinearLayout
                    android:id="@+id/ll_userpoint_dl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cimg_pic_dl"
                    android:text="사용가능 포인트"
                    android:textColor="#000"
                    android:textSize="14dp"
                    />

                    <TextView
                        android:id="@+id/tv_userpoint_dl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cimg_pic_dl"
                        android:text="3"
                        android:textColor="@color/colorAccent"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cimg_pic_dl"
                        android:text="P"
                        android:textColor="#000"
                        android:textSize="14dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



                <LinearLayout
                    android:id="@+id/ll_myprofile_dl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_dl_profile"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내 프로필"
                        android:textColor="#000"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_addtalent_dl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_dl_condition"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재능등록"
                    android:textColor="#000"
                    android:textSize="16dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_friend_dl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center|left"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_dl_friend"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구목록"
                    android:textColor="#000"
                    android:textSize="16dp"
                    />

            </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_message_dl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_dl_message"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="메시지"
                        android:textColor="#000"
                        android:textSize="16dp"
                        />

                </LinearLayout>




            <LinearLayout
                android:id="@+id/ll_claim_dl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center|left"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_claim"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신고하기"
                    android:textColor="#000"
                    android:textSize="16dp"
                    />

            </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_cs_dl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center|left"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_dl_info"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고객센터"
                        android:textColor="#000"
                        android:textSize="16dp"
                        />

                </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logout_dl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center|left"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_dl_logout"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="#000"
                    android:textSize="16dp"
                    />

            </LinearLayout>


        </LinearLayout>






    </LinearLayout>



    </LinearLayout>
