<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:background="#fff">

            <ImageView
                android:id="@+id/cimg_pic_dl"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_sample" />


            <LinearLayout
                android:id="@+id/ll_mentor_dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="52dp"
                android:layout_toRightOf="@id/cimg_pic_dl"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mentor"
                    android:textColor="@color/bgr_mainColor"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+3"
                    android:textColor="@color/bgr_mainColor"
                    android:textSize="28dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_mentee_dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="52dp"
                android:layout_toRightOf="@id/ll_mentor_dl"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mentee"
                    android:textColor="@color/bgr_mainColor"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2"
                    android:textColor="@color/bgr_mainColor"
                    android:textSize="28dp" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_user_dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cimg_pic_dl"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="박종우"
                android:textColor="#000"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email_dl"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_user_dl"
                android:layout_marginLeft="50dp"
                android:text="pjw910123@gmail.com"
                android:textColor="#464646"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_edit_dl"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/tv_email_dl"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_email_dl"
                android:background="@drawable/bgr_subbutton2"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="수정"
                android:textColor="@color/bgr_mainColor"
                android:textSize="13dp" />


            <ImageView
                android:id="@+id/iv_logout_dl"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/tv_email_dl"
                android:layout_toLeftOf="@+id/iv_alarm_dl"
                android:src="@drawable/icon_logout_dl"
                android:layout_marginRight="5dp"
                />



            <ImageView
                android:id="@+id/iv_alarm_dl"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignBottom="@+id/tv_email_dl"
                android:layout_alignRight="@id/ll_mentee_dl"
                android:src="@drawable/icon_dl_alarmon" />





        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                />
            <LinearLayout
                android:id="@+id/ll_unclick_condition_dl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible"
                >


                <LinearLayout
                    android:id="@+id/ll_myprofile_dl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_dl_profile"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내 프로필"
                        android:layout_marginTop="10dp"
                        android:textColor="#464646"
                        android:textSize="14dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#eee"/>

                <LinearLayout
                android:id="@+id/ll_condition_dl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_dl_condition"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재능상태"
                    android:layout_marginTop="10dp"
                    android:textColor="#464646"
                    android:textSize="14dp"
                    />

            </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_click_condition_dl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#96000000"
                android:orientation="horizontal"
                android:visibility="gone"
                >


                <LinearLayout
                    android:id="@+id/ll_mymentor_dl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:tint="#fff"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나의 멘토"
                            android:layout_marginTop="10dp"
                            android:textColor="#fff"
                            android:textSize="14dp"
                            />

                    </LinearLayout>



                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#eee"
                    />


                <LinearLayout
                    android:id="@+id/ll_mymentee_dl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:tint="#fff"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="나의 멘티"
                            android:layout_marginTop="10dp"
                            android:textColor="#fff"
                            android:textSize="14dp"
                            />

                    </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_closecondition_dl"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_launcher_foreground"
                            />
                    </RelativeLayout>


                </LinearLayout>



            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_talentbox_dl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_dl_talentbox"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="탤런트박스"
                        android:layout_marginTop="10dp"
                        android:textColor="#464646"
                        android:textSize="14dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#eee"/>



                <LinearLayout
                    android:id="@+id/ll_message_dl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_dl_message"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="메시지"
                        android:layout_marginTop="10dp"
                        android:textColor="#464646"
                        android:textSize="14dp"
                        />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eee"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_friend_dl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_dl_friend"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="친구목록"
                        android:layout_marginTop="10dp"
                        android:textColor="#464646"
                        android:textSize="14dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#eee"/>



                <LinearLayout
                    android:id="@+id/ll_cs_dl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_dl_info"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고객센터"
                        android:layout_marginTop="10dp"
                        android:textColor="#464646"
                        android:textSize="14dp"
                        />

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>
    </LinearLayout>
