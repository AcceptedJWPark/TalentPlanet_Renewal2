<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#ffffff"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout_talentlist"/>

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/rl_talentcate_friendlist"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/color_mentor"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="Friend List"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/btn_teahcer_friendlist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bgr_addtalent_leftbtn_clicekd"
                android:text="Teacher인 친구"
                android:textAllCaps="false"
                android:textColor="@color/color_mentor"
                android:textSize="16dp"
                />

            <Button
                android:id="@+id/btn_student_friendlist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bgr_addtalent_rightbtn_unclicekd"
                android:text="Student인 친구"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16dp"
                />



        </LinearLayout>

    </RelativeLayout>




    <ListView
        android:id="@+id/lv_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    </LinearLayout>


