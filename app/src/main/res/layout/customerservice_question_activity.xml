<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_profilebg_profile"
    android:background="#fff"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout_talentlist"/>
    </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ff6666"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/icon_question"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목을 입력해주세요."
                    android:textColor="#787878"
                    android:textSize="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/bgr_claim_edittxtbgr"
                        android:gravity="top|left"
                        android:padding="5dp"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="문의하고자 하는 내용을 입력해주세요."
                    android:textColor="#787878"
                    android:textSize="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    />

                <EditText
                    android:id="@+id/et_qeustion_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bgr_claim_edittxtbgr"
                    android:gravity="top|left"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_qeustion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용하시면서 불편하거나, 개선사항 및 기타 문의사항을 보내주세요. 해당 문의에 대한 답변은 어플 내 메시지로 발송드립니다."
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:lineSpacingExtra="5dp"
                    />
            </LinearLayout>



            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="문의하기"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/bgr_claim_claimbtnbgr"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                />


        </LinearLayout>

</LinearLayout>
