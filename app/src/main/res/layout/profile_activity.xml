<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_profilebg_profile"
    android:background="#fff"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/ll_notalent_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/iv_notalent_profile"
            android:gravity="center"
            android:visibility="gone"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_notalent1_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의 재능"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000"
            />

            <TextView
                android:id="@+id/tv_notalent2_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="을"
                android:layout_above="@+id/iv_notalent_profile"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#646464"
                />

        </LinearLayout>
            <TextView
                android:id="@+id/tv_notalent3_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나누어주세요."
                android:layout_above="@+id/iv_notalent_profile"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#646464"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_notalent_profile"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/pic_notalent_student"
            android:layout_marginBottom="30dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_addtalent_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="80dp"
            android:src="@drawable/icon_addtalent"
            android:visibility="gone"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <RelativeLayout
        android:id="@+id/rl_picarea_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:id="@+id/iv_talent_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />

            <TextView
                android:id="@+id/tv_isteacher_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Teacher의 프로필"
                android:textColor="#fff"
                android:textSize="20dp"
                android:shadowColor="#000"
                android:shadowDx="7.0"
                android:shadowDy="7.0"
                android:shadowRadius="7.0"
                />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"

            >

            <RelativeLayout
                android:id="@+id/rl_edittalent_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#64000000"
                    />


            <ImageView
                android:id="@+id/iv_edittalent_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/icon_edittalent"
                android:layout_centerInParent="true"
                android:tint="#fff"
                />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_deltalent_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#64000000"
                    />


            <ImageView
                android:id="@+id/iv_deltalent_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/icon_trash_btn"
                android:layout_centerInParent="true"
                android:tint="#fff"
                />

            </RelativeLayout>


        </LinearLayout>




    </RelativeLayout>
        <LinearLayout
                android:id="@+id/ll_introarea_profile"
                android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_heart" />

                <TextView
                    android:id="@+id/tv_tag_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="none"
                    android:background="#fff"
                    android:singleLine="true"
                    android:textSize="18dp"
                    android:textColor="#28364a"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_description_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#fff"
                android:textColor="#000"
                android:gravity="top|left"
                android:lineSpacingExtra="10dp"/>


    </LinearLayout>


        </LinearLayout>


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_talent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:fitsSystemWindows="true"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/toolbarlayout_profile"/>
        </android.support.v7.widget.Toolbar>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_status_bg_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top"
            android:background="@color/color_mentee"
            >

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:layout_marginTop="75dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:background="#fff"
                >

                <View
                    android:id="@+id/v1_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v2_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v3_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v4_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v5_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v6_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v7_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v8_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v9_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <View
                    android:id="@+id/v10_estimate_profile"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                >
            <TextView
                android:id="@+id/tv_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_mentor"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <LinearLayout
            android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >


            <ImageView
            android:id="@+id/img_gender_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/color_mentor"
            />


            <TextView
            android:id="@+id/tv_birth_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_mentor"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

            <ImageView
            android:id="@+id/iv_birthopen_profile"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_checkbox_selected"
            android:tint="@color/color_mentor"
            android:visibility="gone"
            />

            <ImageView
            android:id="@+id/iv_birthclose_profile"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_checkbox_unselected"
            android:tint="@color/color_mentor"
            android:visibility="gone"
            />

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
            android:id="@+id/img_mappointer"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_mappointer"
            android:tint="@color/color_mentor" />


            <TextView
            android:id="@+id/tv_addr_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_mentor"
            android:textSize="14dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
            />


            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    >
                    <TextView
                    android:id="@+id/tv_profile_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/color_mentor"
                    android:maxLines="1"
                    android:textSize="14dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                </LinearLayout>



            </LinearLayout>



    </LinearLayout>




        </LinearLayout>


        <ImageView
            android:id="@+id/iv_message_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ll_friendbox_profile"
            android:layout_marginStart="22dp"
            android:src="@drawable/icon_message"
            android:tint="@color/color_mentor" />

        <LinearLayout
            android:id="@+id/ll_friendbox_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="75dp"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:id="@+id/img_addfriend_toolbarprofile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_addfriend"
                android:tint="@color/color_mentor"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/img_delfriend_toolbarprofile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_delfriend"
                android:tint="@color/color_mentor"
                android:visibility="gone"
                />
        </LinearLayout>






        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/cimg_pic_profile"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_profile"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            />



    </RelativeLayout>

</LinearLayout>
