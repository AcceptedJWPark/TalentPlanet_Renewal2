<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search.MainActivity_Search"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:fitsSystemWindows="true"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/toolbarlayout"/>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/ll_bg_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@color/color_mentor"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_searchbox_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:lineSpacingExtra="5dp"
                android:includeFontPadding="false"
                android:minHeight="@dimen/Height40dp"
                android:gravity="center_vertical"
                android:background="@drawable/bgr_messanger_edittxt"
                android:layout_weight="7"
                />

            <LinearLayout
                android:id="@+id/ll_searchbtn_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/iv_searchbg_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:tint="#fff"
                    android:src="@drawable/icon_search_student"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/lv_searchresult_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>