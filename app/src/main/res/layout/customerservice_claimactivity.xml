<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/customerservice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Height50dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout"/>
    </android.support.v7.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:background="#ff6666"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pic_sample"
                    app:civ_border_color="#fff"
                    app:civ_border_width="2dp"
                    android:layout_centerInParent="true"
                    />




                <TextView
                    android:id="@+id/tv_SharingList_Claim"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="메시지에서 대상 찾기"
                    android:textColor="@color/color_mentor"
                    android:textSize="14dp"
                    android:background="@drawable/bgr_claim_findmessage"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textStyle="bold"

                    />

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신고 내용을 선택해주세요."
                android:textColor="#969696"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <LinearLayout
                        android:id="@+id/ll1_claim"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/iv1_claim"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_checkbox_unselected"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="금품 요구"
                            android:textColor="@color/color_mentor"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll2_claim"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/iv2_claim"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_checkbox_unselected"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="폭언 및 욕설"
                            android:textColor="@color/color_mentor"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll3_claim"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/iv3_claim"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_checkbox_unselected"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No-Show"
                            android:textColor="@color/color_mentor"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:id="@+id/ll4_claim"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/iv4_claim"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_checkbox_unselected"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="허위 광고"
                            android:textColor="@color/color_mentor"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll5_claim"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/iv5_claim"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_checkbox_unselected"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기타"
                            android:textColor="@color/color_mentor"
                            android:textSize="16dp"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>



                </LinearLayout>

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신고 내용을 입력해주세요."
                android:textColor="#969696"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/et_Content_Claim"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bgr_claim_edittxtbgr"
                android:gravity="top"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgr_claim_edittxtbgr"
                android:gravity="center|left"
                android:textColor="@color/color_mentor"
                android:text="첨부파일"
                android:textSize="12dp"
                android:paddingLeft="5dp"
                />

                <Button
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bgr_claim_btnbgr"
                    android:layout_alignParentRight="true"
                    android:text="찾아보기"
                    android:textColor="@color/color_mentor"
                    android:textSize="12dp"
                    />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_confirmClaim"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:id="@+id/iv_confirmClaim"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_checkbox_unselected"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위 내용이 사실임을 확인합니다."
            android:textColor="@color/color_mentor"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>




    <Button
        android:id="@+id/btn_SaveClaim_Claim"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="신고 하기"
        android:gravity="center"
        android:textColor="@color/textcolor_bigbtn"
        android:background="@drawable/bgr_claim_claimbtnbgr"
        android:textSize="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:textStyle="bold"
        />



</LinearLayout>

