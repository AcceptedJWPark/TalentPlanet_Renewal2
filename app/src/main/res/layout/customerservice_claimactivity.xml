<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/customerservice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Height50dp"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbarlayout"/>
    </android.support.v7.widget.Toolbar>



    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            android:focusableInTouchMode="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Height50dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="신고 조치는 &quot;신고내역&quot;에서 확인 할 수 있습니다."
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/textColor_txtpage"
                android:textSize="@dimen/SubTxt"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:textColor="@color/textColor_object"
                    android:textSize="@dimen/AdditionTxt"
                    android:text="(메시지 캡처 등의 증거사진 첨부가 신고 조치에 수월할 수 있습니다.)"
                    android:gravity="center"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Height100dp"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:text="신고 대상"
                        android:textColor="#000000"
                        android:textSize="@dimen/SubTxt"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:background="@drawable/bgr_inputbox"
                        >
                        <TextView
                            android:id="@+id/tv_SharingList_Claim"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="공유 내역보기"
                            android:textColor="@color/textColor_subject"
                            android:textSize="@dimen/SubTxt"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:text="신고 유형"
                        android:textColor="#000000"
                        android:textSize="@dimen/SubTxt"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:background="@drawable/bgr_inputbox"
                        >

                        <Spinner
                            android:id="@+id/spn_ClaimType_Claim"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="3dp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <View
                android:id="@+id/v_Divider_Claim"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#eeeeee"
                />

            <TextView
                android:id="@+id/tv_txt_Claim"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="&quot;공유 내역보기에서 신고 대상을 선택해주세요.&quot;"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/textColor_txtpage"
                android:textSize="@dimen/SubTxt"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Height100dp"
                android:gravity="center"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/bgr_edittxt_box"
                    android:orientation="vertical"
                    >

                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/Claim_EditTxtScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:padding="3dp"
                        android:background="#ffffff"
                        android:fillViewport="true"
                        android:layout_above="@+id/Claim_EditTxtLimitLL"
                        >

                        <EditText
                            android:id="@+id/et_Content_Claim"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:gravity="top"
                            android:hint="내용을 입력해주세요. 1000자로 제한됩니다."
                            android:maxLength="1000"
                            android:textSize="@dimen/AdditionTxt"
                            />
                    </android.support.v4.widget.NestedScrollView>

                    <LinearLayout
                        android:id="@+id/Claim_EditTxtLimitLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="right"
                        >
                    <TextView
                        android:id="@+id/tv_TxtCount_Claim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@id/bar"
                        android:textColor="#000000"
                        android:textSize="@dimen/AdditionTxt"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:id="@+id/bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:layout_alignParentBottom="true"
                        android:layout_toLeftOf="@id/text1000limit"
                        android:textSize="@dimen/AdditionTxt"
                        android:textColor="#000000"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="3dp"
                        />

                    <TextView
                        android:id="@+id/text1000limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/AdditionTxt"
                        android:textColor="#000000"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>



            <Button
                android:id="@+id/btn_SaveClaim_Claim"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:text="신고 하기"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/textcolor_bigbtn"
                android:background="@drawable/bgr_bigbtn"
                android:textSize="@dimen/MainTxt"
                />


            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    </ScrollView>
</LinearLayout>

