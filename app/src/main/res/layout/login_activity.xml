<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout android:id="@+id/SharingList_WholeLL"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#ffffff"
        android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:id="@+id/rl_container_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:background="#4d5868"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/ll_idpw_login"
            android:layout_centerInParent="true"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_login"
                android:adjustViewBounds="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/img_login_logo"
                android:layout_marginBottom="40dp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_idpw_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#656d7b"
                android:hint="E-mail"
                android:paddingLeft="10dp"
                android:id="@+id/et_email_login"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:text=""/>
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#656d7b"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:id="@+id/et_pw_login"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:text=""/>

            <TextView
                android:id="@+id/tv_login_find"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="right|center_vertical"
                android:layout_gravity="right"
                android:text="ID/PW 찾기"
                android:textColor="#fff"
                android:textSize="14dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_idpw_login"
            android:layout_marginTop="20dp"
            >
            <Button
                android:id="@+id/btn_login_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bgr_loginbtn1"
                android:text="Login"
                android:textColor="@color/color_mentor"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/btn_join_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bgr_loginbtn2"
                android:text="Join-Us"
                android:textAllCaps="false"
                android:textColor="@color/color_mentor"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp" />

        </LinearLayout>


    </RelativeLayout>

    </LinearLayout>


